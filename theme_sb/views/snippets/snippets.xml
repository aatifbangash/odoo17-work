<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_snippets" inherit_id="website.snippets" name="Custom Snippets">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">SB Snippets</div>
                <div class="o_panel_body">
                    <t t-snippet="theme_sb.block_1" t-thumbnail="/theme_sb/static/img/snippets/snippet_img.svg">
                        <keywords>property, agents</keywords>
                    </t>

                    <t t-snippet="theme_sb.block_2" t-thumbnail="/theme_sb/static/img/snippets/snippet_img_2.svg">
                        <keywords>departments, companies</keywords>
                    </t>

                    <t t-snippet="theme_sb.block_3" t-thumbnail="/theme_sb/static/img/snippets/snippet_img_3.svg">
                        <keywords>explore, cities</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>